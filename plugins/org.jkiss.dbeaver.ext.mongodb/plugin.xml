<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>

<plugin>

    <extension point="org.jkiss.dbeaver.dataSourceProvider">

        <!-- mongodb -->

        <datasource
                class="org.jkiss.dbeaver.ext.mongodb.MongodbDataSourceProvider"
                description="%datasource.mo.description"
                id="mongodb"
                parent="generic"
                label="Mongodb"
                icon="icons/mongodb.png"
                dialect="basic">
            <drivers managable="true">

                <driver
                        id="mongo-db"
                        label="Mongodb"
                        class="com.mongodb.MongoClient"
                        icon="icons/mongodb.png"
                        iconBig="icons/mongodb.png"
                        sampleURL="jdbc:mongo://{host}:{port}/"
                        defaultPort="27017"
                        description="Mongo db Driver"
                        webURL="https:https://docs.mongodb.com/datalake/tutorial/jdbc-driver"
                        categories="nosql">
                    categories="nosql">
                    <file type="jar" path="maven:/org.mongodb:mongo-java-driver:3.8.0" bundle="!drivers.mongodb"/>
                    <file type="license" path="drivers/mongodb/LICENSE.txt" bundle="drivers.mongodb"/>
                    <file type="jar" path="drivers/mongodb" bundle="drivers.mongodb"/>

                    <property name="readPreference" value="ReadPreference.nearest()"/>
                    <property name="maxConnectionIdleTime" value="10000"/>
                    <property name="connectionsPerHost" value="30"/>
                    <property name="connectTimeout" value="10000"/>
                    <property name="socketTimeout" value="10000"/>
                </driver>

            </drivers>

        </datasource>
    </extension>

